<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/box"
    android:gravity="center"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:id="@+id/lvl_itemclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app1:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_rtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:text="Tititi"
                        android:textColor="@color/colorBalck"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_totoalitme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"

                        android:text="1 Item"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp" />

                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:text="Location"
                        android:textColor="@color/colorBalck"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txt_totoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="2dp"
                        android:text="$254"
                        android:textColor="@color/colorBalck"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="Delivery"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_ptitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="kasar pista 32.kg"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="june 2021 17 10:20"
                    android:textSize="12dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_ordernum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="OrderID #1230"

                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_trackorder"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:background="@drawable/button_round"
                android:gravity="center"
                android:padding="3dp"
                android:text="TRACK"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_orderrates"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:text="RATE ORDER"
                android:textColor="@color/colorBalck"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="Your rating for Delivery"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_drates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="3dp"
                    android:drawableTint="@color/quantum_yellow"
                    android:text="5  |  love it"
                    android:textColor="@color/colorBalck"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_rrtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="Your rating for Delivery"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_rrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="3dp"
                    android:drawableTint="@color/quantum_yellow"
                    android:text="5  |  love it"
                    android:textColor="@color/colorBalck"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
